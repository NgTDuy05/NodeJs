<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Edit User</title>
</head>

<body>
    <h2>Edit User</h2>
    <form action="/edit/<%= user.id %>" method="POST">
        <label>Email:</label>
        <input type="email" name="email" value="<%= user.email %>" required disabled><br>
        <input type="hidden" name="email" value="<%= user.email %>"><br>
        <label>Name:</label>
        <input type="text" name="name" value="<%= user.name %>" required><br>
        <label>City:</label>
        <input type="text" name="city" value="<%= user.city %>" required><br>
        <button type="submit">Save</button>
    </form>
</body>

</html>